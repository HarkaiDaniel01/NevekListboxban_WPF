<Window x:Class="NevekListboxban_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NevekListboxban_WPF"
        mc:Ignorable="d"
        Title="Rendezés névsor szerint" Height="550" Width="500" MinHeight="450" MinWidth="400">
    <Grid Background="LightGray">
        <Label
            Content="Keresztnevek, elválasztva"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="10 10 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_nevekBe"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Margin="10 45 10 0"
            FontSize="16"
            />

        <Label
            Content="Nevek listája"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="20 90 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />
        
        <ListBox
            x:Name="lb_nevek"
            Width="180"
            Height="300"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="20 125 0 0"
            SelectionMode="Single"
            />

        <Label
            Content="Névsorban Rendezve"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="280 90 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <ListBox
            x:Name="lb_nevekRendezve"
            Width="180"
            Height="300"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0 125 20 0"
            SelectionMode="Single"
            />

        <Button
            x:Name="btn_szavakraBont"
            Content="Szavakra bontás"
            Width="180"
            Height="50"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="20 455 0 0"
            FontSize="16"
            FontWeight="DemiBold" Click="btn_szavakraBont_Click"
            />

        <Button
            x:Name="btn_rendez"
            Content="Rendez"
            Width="100"
            Height="50"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="285 455 0 0"
            FontSize="16"
            FontWeight="DemiBold" Click="btn_rendez_Click"
            />









    </Grid>
</Window>
